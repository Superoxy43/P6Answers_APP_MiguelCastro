<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="P6Answers_APP_MiguelCastro.Views.BienvenidaPage"
             Shell.NavBarIsVisible="False"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="Black"
             BackgroundImageSource="imagenprogra6ejercicio"
             >

    <VerticalStackLayout Padding="20,50,20,0" VerticalOptions="StartAndExpand">

        <Entry x:Name="TxtUserName" Margin="0,30,0,10" Placeholder="Username/Email" Keyboard="Email" FontSize="25" />

        <Entry x:Name="TxtPassword" Placeholder="Password" Keyboard="Text" FontSize="25" IsPassword="True" />

        <Button x:Name="BtnLogin" Text="LOGIN" Margin="0,20,0,20" Clicked="BtnLogin_Clicked" />
        
    </VerticalStackLayout>
</ContentPage>